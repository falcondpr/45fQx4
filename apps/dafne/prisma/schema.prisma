generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  name       String
  email      String
  password   String
  created_at DateTime @default(now())
}

model Message {
  id                  Int      @id @default(autoincrement())
  id_user_transmitter Int
  id_user_receiver    Int
  content             String
  created_at          DateTime @default(now())
}

model Requests {
  id         Int      @id @default(autoincrement())
  id_product Int
  id_vendor  Int
  id_buyer   Int
  status     Boolean
  created_at DateTime @default(now())
}

model MessageComment {
  id         Int      @id @default(autoincrement())
  id_request Int
  content    String
  id_vendor  Int
  id_buyer   Int
  created_at DateTime @default(now())
}
